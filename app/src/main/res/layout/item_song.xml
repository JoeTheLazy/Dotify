<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/item_song_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_song_title"
        android:text="Default Song"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/item_song_icon"
        app:layout_constraintBottom_toTopOf="@+id/item_song_artist"
        app:layout_constraintTop_toTopOf="@+id/item_song_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_song_artist"
        android:text="Default Author"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/item_song_icon"
        app:layout_constraintTop_toBottomOf="@id/item_song_title"
        app:layout_constraintBottom_toBottomOf="@+id/item_song_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>